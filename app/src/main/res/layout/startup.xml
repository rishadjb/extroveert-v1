<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@mipmap/logo_text"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:gravity="center"
        android:layout_gravity="center">
        <requestFocus></requestFocus>


        <EditText
            android:hint="Email or Username"
            android:id="@+id/email_text"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="left"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="#e8e8e8"/>


        <EditText
            android:hint="Password"
            android:id="@+id/password_text"
            android:inputType="textPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:textSize="10sp"
            android:fontFamily="sans-serif-light"
            android:background="#e8e8e8"/>

        <TextView
            android:text="Sign in / Register"
            android:id="@+id/emaillogin_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/emaillogin_button" />


        <TextView
            android:text="Sign in with Google"
            android:id="@+id/googlelogin_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/googlelogin_button" />

        <TextView
            android:text="Sign in with Facebook"
            android:id="@+id/fblogin_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/fblogin_button" />


        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/passcheck_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:padding="0dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#DF0101"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:text="Forgot username or password"
            android:id="@+id/forgotlogin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#b0b0b0"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>

    <TextView
        android:text="Put extroveert catchphrase here"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light" />

</FrameLayout>