        <ImageView
            android:id="@+id/friend_imagelink"
            android:text="name"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_below="@+id/event_pic"
            android:textColor="#828282">
        </ImageView>

        <TextView
