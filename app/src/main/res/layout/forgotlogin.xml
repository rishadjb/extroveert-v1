<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@mipmap/logo_text"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:gravity="center"
        android:layout_gravity="center">
        <requestFocus></requestFocus>


        <EditText
            android:hint="Email or Username"
            android:id="@+id/email_text"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="left"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="#e8e8e8"/>


        <TextView
            android:text="Recover Password"
            android:id="@+id/recover_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/emaillogin_button" />


        <TextView
            android:id="@+id/passcheck_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:padding="0dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#DF0101"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>

    <TextView
        android:text="Put extroveert catchphrase here"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light" />

</FrameLayout>