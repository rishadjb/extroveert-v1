<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- ==============================LOCATION field======================== -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_margin="5dip">
        <TextView
            android:text="LOCATION"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="13sp"
            android:textColor="#174b5e"
            android:fontFamily="sans-serif-medium"/>
        <AutoCompleteTextView
            android:id="@+id/location_text"
            android:hint="Near Me"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:paddingLeft="7dp"
            android:layout_marginRight="15dip"
            android:gravity="center_vertical|left"
            android:textSize="12sp"
            android:textColor="#174b5e"
            android:singleLine="true"
            android:dropDownHeight="wrap_content"
            android:fontFamily="sans-serif-light"
            android:background="#fafafa"/>
    </LinearLayout>
    <!-- //==============================LOCATION field======================== -->

    <!-- ==============================SEARCH RADIUS fields======================== -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_margin="5dip">
        <TextView
            android:text="SEARCH RADIUS"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="13sp"
            android:textColor="#174b5e"
            android:fontFamily="sans-serif-medium"/>
        <EditText
            android:id="@+id/radius_text"
            android:hint="5 km"
            android:inputType="number"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:paddingLeft="7dp"
            android:layout_marginRight="15dip"
            android:gravity="center_vertical|left"
            android:textSize="12sp"
            android:textColor="#174b5e"
            android:singleLine="true"
            android:fontFamily="sans-serif-light"
            android:background="#fafafa"/>
    </LinearLayout>
    <!-- //==============================SEARCH RADIUS fields======================== -->

    <!-- ==============================TIME fields======================== -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_margin="5dip">
        <TextView
            android:text="TIME"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="13sp"
            android:textColor="#174b5e"
            android:fontFamily="sans-serif-medium"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="15dip">
            <EditText
                android:id="@+id/startTime_text"
                android:hint="Start Time"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="15dip"
                android:layout_gravity="left"
                android:gravity="center"
                android:textSize="12sp"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:background="#fafafa"/>
            <TextView
                android:text="-"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:layout_marginRight="15dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:id="@+id/endTime_text"
                android:hint="End Time"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="12sp"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:background="#fafafa"/>
        </LinearLayout>
    </LinearLayout>
    <!-- //==============================TIME fields======================== -->

    <!-- ==============================PRICE fields======================== -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_margin="5dip">
        <TextView
            android:text="PRICE"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="13sp"
            android:textColor="#174b5e"
            android:fontFamily="sans-serif-medium"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="15dip">
            <EditText
                android:id="@+id/startPrice_text"
                android:inputType="number"
                android:hint="Low Price"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="15dip"
                android:layout_gravity="left"
                android:gravity="center"
                android:textSize="12sp"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:background="#fafafa"/>
            <TextView
                android:text="-"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:layout_marginRight="15dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"/>

            <EditText
                android:id="@+id/endPrice_text"
                android:hint="High Price"
                android:inputType="number"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="12sp"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:background="#fafafa"/>
        </LinearLayout>
    </LinearLayout>
    <!-- //==============================PRICE fields======================== -->


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_margin="5dip">
        <TextView
            android:text="EVENT TYPE"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:paddingRight="7dp"
            android:gravity="center_vertical|right"
            android:textSize="13sp"
            android:textColor="#174b5e"
            android:fontFamily="sans-serif-medium"/>
        <MultiAutoCompleteTextView
            android:id="@+id/eventType_text"
            android:hint="Concert, Theater, Sports, Other"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:paddingLeft="7dp"
            android:layout_marginRight="15dip"
            android:gravity="center_vertical|left"
            android:textSize="12sp"
            android:singleLine="true"
            android:fontFamily="sans-serif-light"
            android:background="#fafafa"/>
    </LinearLayout>

</LinearLayout>